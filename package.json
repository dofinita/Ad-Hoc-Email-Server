{
  "name": "ahem-server",
  "version": "1.0.0",
  "license": "LGPL-3",
  "scripts": {
    "ng": "ng",
    "start": "concurrently --kill-others \"node ahem.js\" \"ng serve --proxy-config proxy.conf.json\"",
    "test": "ng test",
    "testServer": "node_modules/jest/bin/jest.js **/*/serverapp.spec.js --runInBand --detectOpenHandles --forceExit --coverage",
    "code-coverage-badges": "node_modules/jest-coverage-badges/cli.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build": "npm install && npm rebuild node-sass && ng build",
    "buildDev": "npm install && npm rebuild node-sass && ng build --dev",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/universalServer --proxy-config proxy.conf.json",
    "build:client-and-server-bundles": "ng build --prod && ng run ahem-universal:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors --display-error-details",
    "webpack:backend": "webpack --config webpack.backend.config.js --progress --colors --display-error-details"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/server/app/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageDirectory": "./coverage"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^16.0.2",
    "@angular/cdk": "^16.0.1",
    "@angular/common": "^16.0.2",
    "@angular/compiler": "^16.0.2",
    "@angular/core": "^16.0.2",
    "@angular/forms": "^16.0.2",
    "@angular/material": "^16.0.1",
    "@angular/platform-browser": "^16.0.2",
    "@angular/platform-browser-dynamic": "^16.0.2",
    "@angular/platform-server": "^16.0.2",
    "@angular/router": "^16.0.2",
    "@babel/compat-data": "^7.21.9",
    "@fortawesome/angular-fontawesome": "^0.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@nguniversal/express-engine": "^16.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1", 
    "@types/socket.io": "^2.1.4",
    "angular-swagger-ui": "^0.6.5",
    "angulartics2": "^12.2.0",
    "axios": "^1.4.0",
    "core-js": "^3.30.2",
    "dotenv": "^16.0.3    ",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mailparser": "^3.6.4",
    "moment": "^2.29.4",
    "mongodb": "^5.5.0",
    "morgan": "^1.10.0",
    "ng2-adsense": "^5.4.3",
    "ngx-highlight-js": "^2.1.1",
    "ngx-moment": "^3.5.0",
    "nodemon": "^1.19.4",
    "rxjs": "^6.5.4",
    "smtp-server": "^3.5.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "swagger-ui-express": "^4.1.2",
    "ts-loader": "^5.4.5",
    "winston": "^3.2.1",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.22",
    "@angular/cli": "^8.3.22",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@types/jasmine": "^2.8.16",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^10.17.13",
    "codelyzer": "^5.2.1",
    "jasmine": "^3.5.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jasmine-ts": "^0.3.0",
    "jest": "^25.0.0",
    "jest-coverage-badges": "^1.1.2",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.5.1",
    "mongodb-memory-server": "^8.12.2",
    "node-sass": "^4.13.0",
    "@babel/compat-data": "^7.8.0",
    "nodemailer": "^4.7.0",
    "nyc": "^14.1.1",
    "protractor": "^5.4.2",
    "supertest": "^3.4.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.20.1",
    "typescript": "~3.5.3",
    "webpack-cli": "^3.3.10"
  }
}
